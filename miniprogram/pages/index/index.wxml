<!--miniprogram/pages/index/index.wxml-->
<van-sticky>  
  <van-search
    field-class="vant-search"
    value="{{ value }}"
    placeholder="查询英文单词"
    use-action-slot
    bind:change="onChange"
    bind:search="onSearch"
    class="van-hairline--bottom"
  >
    <view slot="action" bind:tap="onClick">搜索</view>
  </van-search>
</van-sticky>